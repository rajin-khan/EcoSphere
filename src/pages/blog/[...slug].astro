---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// This function is required for dynamic routes. It finds all blog posts
// and creates a page for each one based on its slug.
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;
const post = Astro.props;
const { Content } = await post.render();
---
<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="container">
    <header class="post-header">
      <h1>{post.data.title}</h1>
      <p class="post-meta">
        Published on {post.data.pubDate.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })} Â· {post.data.readTime}
      </p>
    </header>
    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .container {
    max-width: 68ch; /* Optimal width for reading */
  }
  .post-header {
    padding: 4rem 0;
    text-align: center;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 3rem;
  }
  .post-header h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    max-width: 20ch;
    margin: 0 auto 1.5rem;
    font-style: italic;
    line-height: 1.1;
  }
  .post-meta {
    color: var(--text-secondary);
    margin: 0;
  }
</style>